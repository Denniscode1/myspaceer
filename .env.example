# MySpaceER Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit your .env file to version control!

# ====================
# CRITICAL SECURITY SETTINGS
# ====================
# Generate strong random keys using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Encryption Key (REQUIRED - 32 bytes hex = 64 characters)
ENCRYPTION_KEY=GENERATE_64_CHAR_HEX_KEY_HERE

# JWT Secret (REQUIRED - Generate a strong random string)
JWT_SECRET=GENERATE_STRONG_RANDOM_SECRET_HERE

# Session Secret (REQUIRED - Generate a strong random string)
SESSION_SECRET=GENERATE_STRONG_RANDOM_SECRET_HERE

# Backup Encryption Passphrase (REQUIRED for production backups)
BACKUP_PASSPHRASE=GENERATE_STRONG_PASSPHRASE_HERE

# ====================
# APPLICATION SETTINGS
# ====================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# ====================
# DATABASE CONFIGURATION
# ====================
# For Production: Use PostgreSQL
DB_TYPE=sqlite
# DB_TYPE=postgresql
# DB_PRIMARY_HOST=localhost
# DB_PRIMARY_PORT=5432
# DB_REPLICA_HOST=localhost
# DB_REPLICA_PORT=5432
# DB_NAME=myspaceer_production
# DB_USER=myspaceer_user
# DB_PASSWORD=SECURE_DB_PASSWORD_HERE
# DB_CONNECTION_STRING=postgresql://user:pass@host:5432/dbname

# ====================
# EMAIL/SMTP CONFIGURATION
# ====================
EMAIL_PROVIDER=console
# EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here
EMAIL_FROM_NAME=MySpaceER Emergency System
EMAIL_FROM_ADDRESS=your-email@gmail.com

# ====================
# SMS CONFIGURATION (Twilio)
# ====================
SMS_PROVIDER=console
# SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1876XXXXXXX

# ====================
# PUSH NOTIFICATION CONFIGURATION
# ====================
PUSH_PROVIDER=console
# PUSH_PROVIDER=firebase
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email

# ====================
# REDIS CACHE (Production)
# ====================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=SECURE_REDIS_PASSWORD_HERE

# ====================
# BACKUP CONFIGURATION (Production)
# ====================
# BACKUP_S3_BUCKET=myspaceer-backups
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_REGION=us-east-1

# ====================
# MONITORING & LOGGING
# ====================
ENABLE_CONSOLE_LOGGING=true
LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn-here

# ====================
# EXTERNAL APIS
# ====================
# GOOGLE_MAPS_API_KEY=your-google-maps-key

# ====================
# TESTING & DEVELOPMENT
# ====================
TEST_MODE=false
PHONE_NUMBER=your-test-phone-number

# Show demo credentials in login (ONLY for development/testing)
# Set to 'false' or remove this line in production
VITE_SHOW_DEMO_CREDENTIALS=true
